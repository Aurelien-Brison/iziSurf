{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="main lightgreen">
    <div class="container-fluid">
        <div class="search row">
            <div class="col-12">
                <h1 class="white__title">Connexion</h1>
                <div class="text-center">
                    {% for message in app.flashes('activationEmail') %}
                    <div class="alert alert-warning">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
                <div class="text-center">
                    {% for message in app.flashes('activationSuccess') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
                <div class="text-center">
                    {% for message in app.flashes('noEmailAddress') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
                <div class="text-center">
                    {% for message in app.flashes('forgottenPassword') %}
                    <div class="alert alert-warning">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
                <div class="text-center">
                    {% for message in app.flashes('newPassword') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 text-center">
            {% if error %}
                <div class="custom-errors-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <form novalidate method="post">
                    <div class="form-group">
                        <label class="required" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label class="required" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="signin__explaination">
                        <p><a href="{{ path('security_forgotten_password') }}">Mot de passe oublié ?</a></p>
                        <p><a href="{{ path('missing-email') }}">Email d'activation non reçu ?</a></p>
                        <p class="orange-color"><a href="{{ path('user_registration') }}">Par ici si tu n'as pas encore de compte !</a></p>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-orange" type="submit">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
        
{% endblock %}
