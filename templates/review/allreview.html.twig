{% extends "base.html.twig" %}

{% block body %}

<div class="container-fluid">
    <div class="row justify-content-center darkgreen">
        <div class="col-xl-4 review__background">
            <h1 class="white__title">TOUS LES AVIS</h1>
        </div>
        <div class="col-xl-8 allReviews-background">
            {% for review in allReviews|slice(0,1)%}
                <p class="white__title sand-text">{{ review.user.firstname }}</p>
            {% endfor %}
            <div class="allReviews__right">
                {% for review in allReviews %}
                    <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
                        <i class="fas fa-quote-left"></i>
                        <p class="allReviews-text">{{review.comment}}</p>
                        <i class="fas fa-quote-right"></i>
                        <div class="allReviews-date">
                            <p>* par {{review.author}}, le <span class="js-review-date">{{review.createdAt|date("Y-m-d")}}</span></p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment-with-locales.min.js"></script>
<script src="{{ asset('assets/js/date.js') }}"></script>

{% endblock %}