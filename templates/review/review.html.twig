{% extends "base.html.twig" %}

{% block body %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-4 review__background">
            <h1 class="white__title">Rédige un avis</h1>
        </div>
        <div class="col-xl-8 allReviews-background">
            <div class="addReview__title">
                <p>Tu as récemment voyagé</p>
                <p>aux côtés de <span class="orange-color bold">{{ idUser }}</span></p>
            </div>
            <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                {{form_start(form)}}
                    {{form_row(form.comment)}}
                    <p class="addReview__precision">* Ton avis est utile ! Il sera visible par tous les membres de la communauté Izisurf.</p>
                    <div class="text-center">
                        <button class="btn btn-orange">Valider</button>
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>

{% endblock %}