{% extends 'base.html.twig' %}

{% block title %}Modifie ton profil{% endblock %}

{% block body %}

<div class="main lightgreen">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 white__title">
        <h1>Modifie ton profil</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-4">
        {{ form_start(form) }}
        {{ form_row(form.firstname, {'label': 'Prénom *'}) }}
        {{ form_row(form.lastname, {'label': 'Nom *'}) }}
        {{ form_row(form.age, {'label': 'Âge *'}) }}
        {{ form_row(form.gender, {'label': 'Genre *'}) }}
        {{ form_row(form.phone, {'label': 'Téléphone', 'label_attr': {'class': 'required'}} ) }}
        {{ form_row(form.password, {'label': 'Mot de passe *'}) }}
        {{ form_row(form.confirmPassword, {'label': 'Confirme ton mot de passe *'}) }}
      </div>
      <div class="col-12 col-lg-4">
        {{ form_row(form.email, {'label': 'Email'}) }}
        {{ form_row(form.level, {'label': 'Niveau en surf *'}) }}
        {{ form_row(form.imageFile, {'label': 'Photo de profil'}) }}
        <button class="btn btn-orange">{{ button_label|default('Mettre à jour') }}</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

